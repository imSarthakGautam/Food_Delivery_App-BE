<%- include('./partials/header') %>

<% if (error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-4 rounded-md bg-red-600 shadow-lg">
        <span class="inline-block text-white">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="w-full h-screen flex px-10 bg-gray-50">
    <div class="w-1/2 flex items-center justify-center">
        <div class="w-full max-w-md px-10 py-8 bg-white shadow-md rounded-lg">
            <h3 class="text-4xl text-center mb-5">Welcome to <span class="text-[#ff6347] font-semibold">Foodies</span></h3>
            <h4 class="text-2xl text-center mb-5">Create Your Account</h4>
            <form autocomplete="off" action="/users/register" method="post">
                <input
                    class="text-xl bg-gray-100 block w-full px-4 py-3 border border-gray-300 rounded-md mb-4 transition duration-200 focus:ring-2 focus:ring-[#ff6347] focus:outline-none"
                    type="text" placeholder="Full Name" name="fullname" required>
                <input
                    class="text-xl bg-gray-100 block w-full px-4 py-3 border border-gray-300 rounded-md mb-4 transition duration-200 focus:ring-2 focus:ring-[#ff6347] focus:outline-none"
                    type="email" placeholder="Email" name="email" required>
                <input
                    class="text-xl bg-gray-100 block w-full px-4 py-3 border border-gray-300 rounded-md mb-4 transition duration-200 focus:ring-2 focus:ring-[#ff6347] focus:outline-none"
                    type="password" placeholder="Password" name="password" required>
                <input class="px-5 rounded-full py-3 mt-4 w-full bg-[#ff6347] text-white hover:bg-[#ff7f50] transition duration-200" type="submit"
                    value="Create My Account">
            </form>
        </div>
    </div>
    <div class="w-1/2 flex items-center justify-center">
        <div class="w-full max-w-md px-10 py-8 bg-white shadow-md rounded-lg">
            <h4 class="text-2xl text-center mb-5">Login to Your Account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input
                    class="text-xl bg-gray-100 block w-full px-4 py-3 border border-gray-300 rounded-md mb-4 transition duration-200 focus:ring-2 focus:ring-[#ff6347] focus:outline-none"
                    type="email" placeholder="Email" name="email" required>
                <input
                    class="text-xl bg-gray-100 block w-full px-4 py-3 border border-gray-300 rounded-md mb-4 transition duration-200 focus:ring-2 focus:ring-[#ff6347] focus:outline-none"
                    type="password" placeholder="Password" name="password" required>
                <input class="px-5 rounded-full py-3 mt-4 w-full bg-[#ff6347] text-white hover:bg-[#ff7f50] transition duration-200" type="submit"
                    value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
