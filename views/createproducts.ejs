<%- include('./partials/header') %>

<% if(success.length>0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-4 rounded-md bg-blue-600 shadow-lg">
        <span class="inline-block mt-1 mb-1 text-white text-lg font-semibold">
            <% console.log(success) %>
            <%= success %>
        </span>
    </div>
<% } %>

<div class="min-h-screen flex flex-col">
    <div class="container px-12 py-16 flex flex-grow">
        <!-- Sidebar -->
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col space-y-4">
                <a class="block text-xl text-gray-700 hover:text-blue-600 font-semibold" href="">All Products</a>
                <a class="block text-xl text-gray-700 hover:text-blue-600 font-semibold" href="">Create New Product</a>
            </div>
        </div>

        <!-- Main Content -->
        <main class="w-3/4 bg-white p-8 shadow-lg ml-6 rounded-md">
            <h2 class="text-3xl font-bold mb-6 text-gray-800">Create New Product</h2>
            
            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                <!-- Product Details -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold mb-4 text-gray-700">Product Details</h3>
                    <div class="mb-6">
                        <label class="block mb-2 text-lg font-medium text-gray-600">Product Image</label>
                        <input name="image" type="file" class="py-3 px-5 border rounded-md w-full text-gray-800" value="Select File">
                    </div>

                    <div class="grid grid-cols-2 gap-6">
                        <input name="name" type="text" placeholder="Product Name"
                            class="border p-3 rounded-md w-full text-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <input name="price" type="text" placeholder="Product Price"
                            class="border p-3 rounded-md w-full text-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <input name="discount" type="text" placeholder="Discount Price"
                            class="border p-3 rounded-md w-full text-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>

                <!-- Panel Details -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold mb-4 text-gray-700">Panel Details</h3>
                    <div class="grid grid-cols-2 gap-6">
                        <input name="bgColor" type="text" placeholder="Background Color"
                            class="border p-3 rounded-md w-full text-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <input name="panelColor" type="text" placeholder="Panel Color"
                            class="border p-3 rounded-md w-full text-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <input name="textColor" type="text" placeholder="Text Color"
                            class="border p-3 rounded-md w-full text-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>

                <!-- Submit Button -->
                <input class="px-6 py-3 rounded-md mt-5 bg-[#ff6347] text-white text-xl font-semibold hover:bg-[#B22222] focus:outline-none focus:ring-4 focus:ring-blue-500" type="submit" value="Create New Product">
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>
