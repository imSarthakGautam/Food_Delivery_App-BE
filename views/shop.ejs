<%- include('./partials/header') %> 

<% if(success.length > 0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen flex items-start px-12 py-12 bg-gray-100">
    <!-- Sidebar -->
    <aside class="w-[20%] h-full flex flex-col items-start pr-8">
        <div class="mb-8">
            <h3 class="text-lg font-semibold mb-2">Sort by</h3>
            <form action="/shop">
                <select class="border border-gray-300 rounded-md px-3 py-2 w-full" name="sortby">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        <div class="mb-8">
            <h3 class="text-lg font-semibold mb-4">Collections</h3>
            <a class="block mb-2 text-gray-600 hover:text-blue-500 transition-colors" href="">New Collection</a>
            <a class="block mb-2 text-gray-600 hover:text-blue-500 transition-colors" href="">All Products</a>
            <a class="block mb-2 text-gray-600 hover:text-blue-500 transition-colors" href="">Discounted Products</a>
        </div>
        <div>
            <h3 class="text-lg font-semibold mb-4">Filter by</h3>
            <a class="block mb-2 text-gray-600 hover:text-blue-500 transition-colors" href="">Availability</a>
            <a class="block mb-2 text-gray-600 hover:text-blue-500 transition-colors" href="">Discount</a>
        </div>
    </aside>

    <!-- Product Grid -->
    <section class="w-[80%] flex flex-col gap-8">
        <div class="grid grid-cols-3 gap-6">
            <% products.forEach(function(product) { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <!-- Image container with square aspect ratio -->
                    <div class="aspect-w-1 aspect-h-1 flex items-center justify-center bg-[<%= product.bgColor %>]">
                        <img class="h-full object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                    </div>

                    <!-- Product details -->
                    <div class="flex justify-between items-center bg-[<%= product.panelColor %>] px-4 py-3 text-[<%= product.textColor %>]">
                        <div>
                            <h3 class="font-semibold text-lg"><%= product.name %></h3>

                            <div class="flex items-center space-x-2">
                                <!-- Check for discount and display accordingly -->
                                <% if (product.discount > 0) { %>
                                    <span class="text-sm text-gray-500 line-through">₹ <%= product.price %></span>
                                    <span class="text-lg font-semibold text-red-600">₹ <%= product.price - product.discount %></span>
                                <% } else { %>
                                    <span class="text-lg font-semibold">₹ <%= product.price %></span>
                                <% } %>
                            </div>
                        </div>
                        <a class="w-8 h-8 flex items-center justify-center rounded-full bg-white shadow" href="/addtocart/<%= product._id %>">
                            <i class="ri-add-line text-gray-700"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
</div>

<%- include('./partials/footer') %>
